{# templates/societe/societe.html.twig  #}
{% extends 'societe/layout.html.twig' %}

{% block title %} Modifier la société {% endblock %}

{% block page_contents %}
    <div class="card text-dark mb-3">
        <h4 class="card-header py-3">
            <span class="ms-3" ><u>Modification de la société {{ societe.nom }}</u></span>
        </h4>
        <div class="card-body">
            <form action="{{ path('societe_submit_edit', {'id':  societe.getId()}) }}" method="POST">
                <div class="form-group mb-1">
                    <label class="col-form-label-sm" for="nom">Nom:</label>
                    <input type="text" class="form-control form-control-sm" id="nom" name="nom" value="{{ societe.nom }}" required>
                </div>
                <div class="form-group mb-1">
                    <label class="col-form-label-sm" for="forme_juridique">Forme Juridique:</label>
                    <select class="form-select form-select-sm" id="forme_juridique" name="forme_juridique" readonly="false" required>
                        {% for formeJuridique  in listFormeJuridique %}
                            <option value="{{ formeJuridique.id }}" {% if societe.getFormeJuridique().getId() == formeJuridique.id %} selected {% endif %}>{{ formeJuridique.libelle }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group mb-1">
                    <label class="col-form-label-sm" for="numero_siren">Num Siren:</label>
                    <input type="text" class="form-control form-control-sm" value="{{ societe.numeroSiren }}" id="numero_siren" name="numero_siren" required>
                </div>
                <div class="form-group mb-1">
                    <label class="col-form-label-sm" for="date_immatriculation">Date Immatriculation:</label>
                    <input type="date"  class="form-control form-control-sm" value={{ societe.dateImmatriculation.format('Y-m-d') }} id="date_immatriculation" name="date_immatriculation" required>
                </div>
                <div class="form-group mb-1">
                    <label class="col-form-label-sm" for="capital">Capital:</label>
                    <input type="text" class="form-control form-control-sm" value="{{ societe.capital }}" id="capital" name="capital" required>
                </div>
                <h5 class="mt-3"><u>Adresse numéro 1</u></h5>
                <div class="form-group mb-1">
                    <label class="col-form-label-sm" for="numero1">Numéro de rue:</label>
                    <input type="text" class="form-control form-control-sm" value="{{ societe.numero1 }}" id="numero1" name="numero1" required>
                </div>
                <div class="form-group mb-1">
                    <label class="col-form-label-sm" for="type_voie1">Type de Voie:</label>
                    <input type="text" class="form-control form-control-sm" value="{{ societe.typeVoie1 }}" id="type_voie1" name="type_voie1" required>
                </div>
                <div class="form-group mb-1">
                    <label class="col-form-label-sm" for="nom_voie1">Nom de la voie:</label>
                    <input type="text" class="form-control form-control-sm" value="{{ societe.nomVoie1 }}" id="nom_voie1" name="nom_voie1" required>
                </div>
                <div class="form-group mb-1">
                    <label class="col-form-label-sm" for="cp1">CP:</label>
                    <input type="text" class="form-control form-control-sm" value="{{ societe.cp1 }}" id="cp1" name="cp1" required>
                </div>
                <div class="form-group mb-1">
                    <label class="col-form-label-sm" for="ville1">Ville:</label>
                    <input type="text" class="form-control form-control-sm" value="{{ societe.ville1 }}" id="ville1" name="ville1" required>
                </div>
                <h5 class="mt-3"><u>Adresse numéro 2</u></h5>
                <div class="form-group mb-1">
                    <label class="col-form-label-sm" for="numero2">Numéro de rue:</label>
                    <input type="text" class="form-control form-control-sm" value="{{ societe.numero2 }}" id="numero2" name="numero2">
                </div>
                <div class="form-group mb-1">
                    <label class="col-form-label-sm" for="type_voie2">Type de Voie:</label>
                    <input type="text" class="form-control form-control-sm" value="{{ societe.typeVoie2 }}" id="type_voie2" name="type_voie2">
                </div>
                <div class="form-group mb-1">
                    <label class="col-form-label-sm" for="nom_voie2">Nom de la voie:</label>
                    <input type="text" class="form-control form-control-sm" value="{{ societe.nomVoie2 }}" id="nom_voie2" name="nom_voie2">
                </div>
                <div class="form-group mb-1">
                    <label class="col-form-label-sm" for="cp2">CP:</label>
                    <input type="text" class="form-control form-control-sm" value="{{ societe.cp2 }}" id="cp2" name="cp2">
                </div>
                <div class="form-group mb-1">
                    <label class="col-form-label-sm" for="ville2">Ville:</label>
                    <input type="text" class="form-control form-control-sm" value="{{ societe.Ville2 }}" id="ville2" name="ville2">
                </div>

                <div class="text-center mt-4"><button type="submit" class="btn btn-primary">Valider</button></div>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}